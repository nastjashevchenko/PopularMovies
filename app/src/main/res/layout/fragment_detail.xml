<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.example.shevchenko.movies.DetailActivityFragment"
    android:orientation="vertical">

    <TextView android:id="@+id/title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:background="@color/header_background"
        android:textColor="@color/header_text"
        android:padding="@dimen/title_padding"/>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/detail_scroll">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/title_margin_bottom"
        tools:context="com.example.shevchenko.movies.DetailActivityFragment">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/poster"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginRight="@dimen/poster_margin_right"
                android:layout_marginEnd="@dimen/poster_margin_right"
                android:layout_marginBottom="@dimen/poster_margin_bottom"
                android:contentDescription="@string/image_description" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rating"
                android:layout_toRightOf="@+id/poster"
                android:layout_toEndOf="@+id/poster" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/release"
                android:layout_below="@+id/rating"
                android:layout_toRightOf="@+id/poster"
                android:layout_toEndOf="@+id/poster" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/plot"
                android:layout_below="@+id/poster"
                android:layout_centerHorizontal="true" />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/title_margin_bottom"
                android:divider="@android:color/transparent"
                android:id="@+id/trailers"
                android:layout_below="@+id/plot" />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/title_margin_bottom"
                android:divider="@android:color/transparent"
                android:id="@+id/reviews"
                android:layout_below="@+id/trailers" />

    </RelativeLayout>
    </ScrollView>
</LinearLayout>